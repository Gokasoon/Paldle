<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->


    <style name="Base.Theme.Paldle" parent="Theme.AppCompat.NoActionBar">

    </style>

    <style name="Theme.Paldle" parent="Base.Theme.Paldle" />>

    <style name="PalNameStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PalNameStyle.Acceuil">
        <item name="android:background">#F1D640</item>
    </style>

    <style name="PalNameStyle.Acceuil.Element">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>

    <style name="PalNameStyle.Acceuil.Element.Boutons">
        <item name="android:width">225dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">@drawable/border</item>
    </style>

    <style name="PalNameStyle.Acceuil.Credit">
        <item name="android:layout_marginTop">170dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="PalNameStyle.Guess">
        <item name="android:background">#F1D640</item>
    </style>

    <style name="PalNameStyle.Guess.Bouton">
        <item name="android:width">150dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="PalNameStyle.Paldex">
        <item name="android:background">#F1D640</item>
        <item name="android:paddingBottom">50dp</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="PalNameStyle.Paldex.Pal">
        <item name="android:layout_margin">20dp</item>
        <item name="android:useDefaultMargins">true</item>
    </style>

    <style name="PalNameStyle.Palview">
        <item name="android:background">#F1D640</item>
    </style>

    <style name="PalNameStyle.Palview.Name">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="PalNameStyle.Palview.Text">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:justificationMode">inter_word</item>
    </style>

    <style name="PalNameStyle.Share">
        <item name="android:width">150dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
</resources>